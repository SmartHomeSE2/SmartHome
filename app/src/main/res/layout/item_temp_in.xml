<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Temperature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ac_unit_black_24dp" />

    <TextView
        android:id="@+id/title_temp_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Room Temperature"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/actual_temp_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00°C"
        app:layout_constraintStart_toStartOf="@+id/title_temp_in"
        app:layout_constraintTop_toBottomOf="@+id/title_temp_in" />

    <TextView
        android:id="@+id/target_temp_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="00°C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow_temp_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/target_temp_in"
        app:layout_constraintEnd_toEndOf="@+id/target_temp_in"
        app:layout_constraintStart_toStartOf="@+id/target_temp_in"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

    <ImageView
        android:id="@+id/arrow_temp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/target_temp_in"
        app:layout_constraintStart_toStartOf="@+id/target_temp_in"
        app:layout_constraintTop_toBottomOf="@+id/target_temp_in"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

</android.support.constraint.ConstraintLayout>